                    {{ form_row(edit_form.texte) }}
                </div>
                <div class="form-group">
                    {{ form_row(edit_form.selected) }}
                </div>
                <div class="form-group">
                    <input class="btn btn-default" type="submit" value="Enregistrer la modification" />
                </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
